@model HomeViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main>
    <div>
        <a asp-action="Novo" asp-controller="Livro" id="novo-flutuante">
            <p align="left" class="plus">+ Incluir</p>
            <p>Incluir</p>
        </a>
    </div>

    <div class="row">
        <div class="card col-md-6 col-lg-3 lista-genero" id="coluna-tecnologia" data-id="tecnologia">
            <h4 class="card-header">Tecnologia</h4>
            <ul class="">
                @foreach (var livro in Model.Tecnologia)
                {
                    <partial name="~/Views/Shared/Livro.cshtml" model="livro" />
                }
            </ul>
        </div>
        <!--fim #coluna-Tecnologia-->

        <div class="card col-md-6 col-lg-3 lista-genero" id="coluna-motivacional" data-id="motivacional">
            <h4 class="card-header">Motivacional</h4>
            <ul class="list-group">
                @foreach (var livro in Model.Motivacional)
                {
                    <partial name="~/Views/Shared/Livro.cshtml" model="livro" />
                }
            </ul>
        </div>
        <!--fim #coluna-Motivacional-->

        <div class="card col-md-6 col-lg-3 lista-genero" id="coluna-cientifico" data-id="cientifico">
            <h4 class="card-header">Cientifico</h4>
            <ul class="">
                @foreach (var livro in Model.Cientifico)
                {
                    <partial name="~/Views/Shared/Livro.cshtml" model="livro" />
                }
            </ul>
        </div>
        <!--fim #coluna-Cientifico-->
    </div>



</main>